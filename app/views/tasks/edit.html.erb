<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.collection_radio_buttons :completed, [[true, 'Yes'], [false, 'No']], :first, :last %>
  <%= f.submit %>
<% end %>

<%= link_to "Home", tasks_path %>
